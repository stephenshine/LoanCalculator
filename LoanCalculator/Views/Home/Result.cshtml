@model LoanCalculator.Models.LoanViewModel
@using Chart.Mvc.Extensions

<div class="row">
    <h2>Information about loan</h2>
    <div class="col-sm-4">
        <h3>Monthly repayment: @Model.MonthlyRepayment.ToString("c")</h3>
    </div>
    <div class="col-sm-4">
        <h3>Total interest: </h3>
    </div>
    <div class="col-sm-4">
        <h3>Total amount to repay: </h3>
    </div>
</div>

@if (Model.MonthlyRepayment != 0)
{
    <button type="button" class="btn btn-info" data-toggle="collapse" data-target="#statement">Show transactions</button>
    <div id="statement" class="collapse">
        <h2>Transactions</h2>
        <table class="table table-striped">
            <tr>
                <th>Month</th>
                <th>Starting balance</th>
                <th>Debit</th>
                <th>Credit</th>
                <th>Closing balance</th>
            </tr>
            @for(int month = 0; month < Model.TermInMonths; month++)
            {
                <tr>
                    <td>@(month + 1)</td>
                    <td>@Model.OpeningBalances.ElementAt(month)</td>
                    <td>@Model.Debits.ElementAt(month)</td>
                    <td>@Model.Credits.ElementAt(month)</td>
                    <td>@Model.ClosingBalances.ElementAt(month)</td>
                </tr>
            }
        </table>
    </div>
}

