@model LoanCalculator.Models.LoanViewModel
@using Chart.Mvc.Extensions
@using Chart.Mvc.SimpleChart

@if (ViewBag.ShowResults)
{
    <div class="row">
        <h2>Information about loan</h2>
        <div class="col-sm-4">
            <h3>Monthly repayment: @Model.MonthlyRepayment.ToString("c")</h3>
        </div>
        <div class="col-sm-4">
            <h3>Total interest: @Model.TotalInterest.ToString("c")</h3>
        </div>
        <div class="col-sm-4">
            <h3>Total amount to repay: @Model.TotalRepaid.ToString("c")</h3>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-12">
            <button type="button" class="btn btn-info" data-toggle="collapse" data-target="#statement">Show transactions</button>
        </div>    
    </div>
    <div id="statement" class="collapse">
        <h2>Transactions</h2>
        <table class="table table-striped">
            <tr>
                <th>Month</th>
                <th>Starting balance</th>
                <th>Debit</th>
                <th>Credit</th>
                <th>Closing balance</th>
            </tr>
            @for (int month = 0; month < Model.Loan.TermInMonths; month++)
            {
                <tr>
                    <td>@(month + 1)</td>
                    <td>@Model.OpeningBalances[month].ToString("c")</td>
                    <td>@Model.Debits[month].ToString("c")</td>
                    <td>@Model.Credits[month].ToString("c")</td>
                    <td>@Model.ClosingBalances[month].ToString("c")</td>
                </tr>
            }
        </table>
    </div>
    @Html.CreateChart("chart", Model.PieChart)
}
